<policies>
    <inbound>
        <base />
        <include-fragment fragment-id="ioapp-authenticated" />
        <set-backend-service id="apim-pool-app-backend"
            backend-id="app-backend-pool" />
        <set-header name="x-appbackend-api-key" exists-action="override">
            <value>{{io-sign-app-backend-key}}</value>
        </set-header>
        <rewrite-uri template="@(context.Request.OriginalUrl.Path)" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>