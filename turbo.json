{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build", "typecheck", "test"]
    },
    "typecheck": {
      "inputs": ["src/**/*.ts"],
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "lint": {
      "inputs": ["src/**/*.ts"],
      "outputs": []
    },
    "format": {},
    "test": {
      "inputs": ["src/**/*.spec.ts", "src/**/*.test.ts"],
      "outputs": [],
      "outputMode": "hash-only"
    }
  }
}
