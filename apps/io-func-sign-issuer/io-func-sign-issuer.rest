# @name createDossier
# @prompt title the title of the dossier
POST {{issuerApiBaseUrl}}/dossiers
X-Subscription-Id: {{subscriptionId}}
Ocp-Apim-Subscription-Key: {{subscriptionKey}}

{
  "title": "{{title}}",
  "documents_metadata": [
    {
      "title": "documento di test",
      "signature_fields": [
        {
          "clause": {
            "title": "clause 1",
            "type": "REQUIRED"
          },
          "attrs": {
            "coordinates": {
              "x": 10,
              "y": 10
            },
            "page": 0,
            "size": {
              "w": 150,
              "h": 30
            }
          }
        }
      ]
    }
  ]
}

